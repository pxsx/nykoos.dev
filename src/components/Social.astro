---
interface Props {
	title: string;
	href: string;
	color: string;
  path: string;
}

const { href, title, color, path} = Astro.props;
---
<li class="social-card">
  <a href={href} target="_blank">
    <button class="styled-button" style={`background-color: ${color}`}>
      <img src=`/socials/${path}`class="icon" />{title}
      
    </button>
  </a>

</li>

<style>

.social-card {
    display: flex;
    justify-content: center;
    align-items: center;
}

.styled-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.75rem 1.5rem;
  border-radius: 8px;
  color: white; /* Text color */
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1); /* Subtle shadow */
  cursor: pointer;
  border: none; /* No border */
}

/* Icon margin to separate it from the text */
.styled-button i {
  margin-right: 0.5rem;
}

/* Hover effect */
.styled-button:hover {
  transform: translateY(-2px); /* Slight raise on hover */
  box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.15); /* Stronger shadow on hover */
  opacity: 0.9; /* Slight fade */
}

/* Active button effect */
.styled-button:active {
  transform: translateY(0); /* Reset transformation */
  box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.2); /* Slightly smaller shadow */
}

.icon {
  width: 20px; /* Adjust size to your preference */
  height: 20px;
  fill: white; /* Inherit text color (white) */
  transition: fill 0.3s ease;
  margin-right: 0.5rem; /* Space between icon and text */
}

</style>